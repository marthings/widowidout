  <h1 class="font-bold text-4xl">Editing counter</h1>

  <%= render "form", counter: @counter %>

  <%= button_to "Delete", @counter, method: :delete, class: "button-soft mt-4", data: { turbo_confirm: "Are you sure you want to delete?" } %>
</div>
